<%- include("./partials/header") %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="mb-2">Compose</h1>
            <form method="post">
                <div class="form-group">
                    <div class="mb-3">
                      <label class="form-label fw-bold">Title</label>
                      <input type="text" name="postTitle" class="form-control" placeholder="Loren ipsum...">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Content</label>
                        <textarea type="text" name="postContent" class="form-control" placeholder="Loren ipsum..." rows="18"></textarea>
                    </div>
                    <button class="btn btn-primary w-25 d-block ms-auto" type="submit">Publish</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>